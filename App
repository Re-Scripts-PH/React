import { useRef } from 'react';
import './App.css'
import Input from './components/Input.tsx'
import Button from './components/Button.tsx'
import Container from './components/Container.tsx'

function App() {
  const input = useRef<HTMLInputElement>(null);
  return (
    <main>
    <p>
      <Button >Button</Button>
    </p>
    <p>
      <Button href="https://google.com">This is a link</Button>
    </p>

    <Container as = { Button } onClick = { () => { console.log('asd') } } type = "button" >Click me</Container>
    <Input label = "test" id = "test" ref = { input }/> 
    <button onClick = { () => console.log(input.current.value) }>test</button>
    </main>
  )
}

export default App
